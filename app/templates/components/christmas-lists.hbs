<ul class="list-group">
  <li class="list-group-item">
    {{one-way-input
      (unless isSaving name 'Enregistrement ...')
      class='form-control'
      placeholder='Nouvelle liste de noel'
      disabled=isSaving
      update=(action (mut name))
      keyEvents=(hash
        13=(action 'onEnter')
        27=(action (mut name) '')
      )
    }}
  </li>
  {{#each lists as |list|}}
    {{#link-to 'lists.list' list.id tagName='li' class='list-group-item'}}
      {{list.name}}
    {{/link-to}}
  {{/each}}
</ul>

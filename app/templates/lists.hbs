<div class="row">
  <div class="col-md-3">
    {{christmas-lists lists=lists addList=(route-action 'addList')}}
  </div>
  <div class="col-md-9">
    {{#if errorMessage}}
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" {{action (mut errorMessage) ''}}><span aria-hidden="true">&times;</span></button>
        {{errorMessage}}
      </div>
    {{/if}}
    {{outlet}}
  </div>
</div>
